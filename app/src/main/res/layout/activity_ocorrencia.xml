<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityOcorrencia">

    <TextView
        android:id="@+id/tv_titulo_ocorre"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="#3F51B5"
        android:paddingTop="5dp"
        android:text="@string/tv_titulo_ocorre"
        android:textAlignment="center"
        android:textColor="#FDFAFA"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/Lista_ocorrencia"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/fundo_listas" />

    <Button
        android:id="@+id/btn_importa_ocorre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/btn_importa_ocorre"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>